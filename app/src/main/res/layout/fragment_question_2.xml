<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.warkiz.tickseekbar.TickSeekBar
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tsb_min="1"
        app:tsb_max="7"
        app:tsb_progress="2"
        app:tsb_show_tick_marks_type="oval"
        app:tsb_thumb_color="@color/quala_green"
        app:tsb_thumb_size="10dp"
        app:tsb_tick_marks_color="@color/quala_g5"
        app:tsb_tick_marks_size="10dp"
        app:tsb_ticks_count="7"
        app:tsb_track_background_color="@color/quala_g2"
        app:tsb_track_background_size="3dp"
        app:tsb_track_progress_color="@color/quala_green"
        app:tsb_track_progress_size="3dp" />

    <TextView
        android:id="@+id/tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Q2.\n코 끝이 시린 추운 겨울날 카페를 발견한 당신!\n어떤 음료를 드시겠습니까?"
        android:textColor="@color/quala_b1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress" />

    <ImageView
        android:id="@+id/iv_question"
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/question_temp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_question" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_select_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/solid_button_green"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:outlineProvider="none"
        android:text="달콤한 핫초코"
        android:textColor="@color/quala_white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_question" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_select_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/solid_button_green"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:outlineProvider="none"
        android:text="고소한 토피넛라떼"
        android:textColor="@color/quala_white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_select_1" />

</androidx.constraintlayout.widget.ConstraintLayout>